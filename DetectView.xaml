<Window x:Class="WisetopLagDetecter.DetectView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WisetopLagDetecter"
        xmlns:viewmodel ="clr-namespace:WisetopLagDetecter.ViewModel"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        d:DataContext="{x:Type viewmodel:DetectViewModel}"
        WindowStartupLocation="CenterScreen"
        Background="{x:Null}"
        Height="160" Width="320">
    <Border
        x:Name="VisionBorder"
        MouseLeftButtonDown="VisionBorder_MouseLeftButtonDown"
        Margin="5"
        Background="Black"
        CornerRadius="5">
        <Grid>
            <TextBlock 
                Text="Vision"
                FontFamily="Resources/Fonts/#feonie"
                FontWeight="Bold"
                Foreground="White"
                FontSize="68"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
        </Grid>
    </Border>
</Window>
